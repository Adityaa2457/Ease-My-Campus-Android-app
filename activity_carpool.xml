<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA4A4A"
    android:backgroundTint="#DAC9C4"
    android:visibility="visible"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="195dp"
        android:layout_height="89dp"
        android:layout_marginTop="28dp"
        android:text="Ease My \nCampus"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="203dp"
        android:layout_height="158dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <View
        android:id="@+id/divider"
        android:layout_width="391dp"
        android:layout_height="5dp"
        android:layout_marginTop="124dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#702424"
        android:foregroundTint="#152997"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/find_ride"
        android:layout_width="246dp"
        android:layout_height="98dp"
        android:layout_marginTop="364dp"
        android:text="Find Ride"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/request_ride"
        android:layout_width="246dp"
        android:layout_height="102dp"
        android:layout_marginTop="36dp"
        android:text="Request Ride"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_ride" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="167dp"
        android:layout_height="107dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carpool" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/bangers"
        android:text="Keep Calm and just Carpool\n\nSave Earth and Save Money"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="387dp"
        android:layout_height="125dp"
        android:layout_marginTop="44dp"
        android:text="Disclaimer: All decisions and price depends on the cab service provider regarding price. We are not Responsible for anything regarding cab booking."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_ride" />
</androidx.constraintlayout.widget.ConstraintLayout>